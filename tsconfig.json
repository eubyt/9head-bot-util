{
    "compilerOptions": {
        "target": "ES2021",
        "module": "Node16",

        "outDir": "./dist",
        "rootDir": "./src",

        "types": ["@types/node"],

        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "noEmit": false,
        "allowJs": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "config"]
}
